@model Product
<nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/images/header-logo.png" alt=""/>
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarResponsive"
                aria-controls="navbarResponsive"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto d-flex flex-row">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminProducts" asp-action="Products">Products</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

<div class="container mt-5 pt-1">
    <div class="mb-3 mt-3">
        <form method="post" enctype="multipart/form-data" asp-controller="AdminProducts" asp-action="Add">
            <div class="mb-3">
                <label class="form-label">Upload File</label>
                <input type="file" name="file" class="form-control"/>
                <h4>Name</h4>
                <input class="text admin-text" value="@Model.Name" asp-for="Name" type="text" placeholder="Enter Product name"/>
                <h4>Description</h4>
                <input class="text admin-text" value="@Model.Description" asp-for="Description" type="text" placeholder="Enter Product Description"/>
                <h4>Price</h4>
                <input class="text admin-text" value="@Model.Price" asp-for="Price" type="number" min="1"/>
                <h4>Quantity</h4>
                <input class="text admin-text" value="@Model.Quantity" asp-for="Quantity" type="number" min="1"/>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>