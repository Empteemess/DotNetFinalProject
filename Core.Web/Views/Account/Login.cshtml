@model LoginViewModel
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">


                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form style="width: 23rem;" method="post">
                        <div class="ms-4 w-100 d-flex justify-content-center align-items-center ms-xl-4">
                            <a class="navbar-brand " href="#">
                                <img class="logo-class" src="~/images/header-logo.png" alt=""/>
                            </a>
                        </div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg"/>
                            <label class="form-label" for="form2Example18">Email address</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg"/>
                            <label class="form-label" for="form2Example28">Password</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                        </div>
                       
                        <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="link-info">Register here</a></p>
                        <p><a asp-controller="Account" asp-action="RecoverPassword" class="link-info">Forgot Password?</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://goingplaces.malaysiaairlines.com/wp-content/uploads/2022/08/Penang.Warehouse129bySixthSense.jpg"
                     alt="LoginAsync image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>