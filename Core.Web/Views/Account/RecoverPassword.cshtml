@model RecoveryPasswordViewModel
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">


                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form style="width: 23rem;" method="post" asp-controller="Account" asp-action="RecoverPassword">
                        <div class="ms-4 w-100 d-flex justify-content-center align-items-center ms-xl-4">
                            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                                <img class="logo-class" src="~/images/header-logo.png" alt=""/>
                            </a>
                        </div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Recover</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg"/>
                            <label class="form-label" for="form2Example18">Email address</label>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        @if (Model.EmailCheck)
                        {
                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" id="form2Example28" class="form-control form-control-lg"/>
                                <label class="form-label" for="form2Example28">New Password</label>
                            </div>

                            <div class="form-outline mb-4">
                                <input asp-for="ConfirmPassword" type="password" id="form2Example28" class="form-control form-control-lg"/>
                                <label class="form-label" for="form2Example28">Confirm New Password</label>
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        }

                        @if (Model.EmailCheck)
                        {
                            <div class="pt-1 mb-4">
                                <button class="btn btn-info btn-lg btn-block" type="submit">Done</button>
                            </div>
                        }
                        else
                        {
                            <div class="pt-1 mb-4">
                                <button class="btn btn-info btn-lg btn-block" asp-controller="Account" asp-action="EmailCheck" asp-route-email="@Model.Email">Check</button>
                            </div>
                        }
                        <p>Already have an account? <a asp-controller="Account" asp-action="Login" class="link-info">Log in here</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://goingplaces.malaysiaairlines.com/wp-content/uploads/2022/08/Penang.Warehouse129bySixthSense.jpg"
                     alt="LoginAsync image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>